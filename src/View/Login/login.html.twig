{% extends 'layout.html.twig' %}

{% block content %}
	<section>
		<div class="containerlog login-page m-0" style="background-image: url('../recup_photos/pexels-johannes-plenio-1125774.jpg'); height: calc(100vh - 94px);">
			<div class="row justify-content-center"></div>
			<div class="row justify-content-center">
				<div class="col-4 mt-5 mb-5">
					<div class="wrapper">
						<div class="row no-gutters">
							<div class="form login-form">
								<div class="contact-wrap form-box w-100 p-4 pt-4">
									<h1 class="ident mb-4 mt-4 text-center text-secondary">Identifiez-vous</h1>
									<form method="POST" id="loginForm" name="loginForm" class="loginForm" action="/admin">
										<div>
											<div class="form-group">
												<label class="label mb-1" for="email"></label>
												<input type="email" class="form-control mb-3" name="email" id="email" placeholder="Adresse email" required>
											</div>
										</div>
										<div>
											<div class="form-group">
												<label class="label mt-3 mb-1" for="password"></label>
												<input type="password" class="form-control" name="pass" id="pass" placeholder="Mot de passe" required>
											</div>
										</div>
										<div class="text-center mt-5 mb-4 pt-3">
											<button type="submit" class="button btn btn-secondary">Connexion</button>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	{% endblock %}
