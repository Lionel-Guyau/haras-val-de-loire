<div class="modal fade" id="show-modal-{{ modalId }}" tabindex="-1" aria-labelledby="show-modal-label" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="show-modal-label">Activités pour ce jour</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>

			<div class="modal-body d-flex flex-wrap">
				{% if eventsForDay|length < 2 %}

					<a href="/activity/register?id={{eventsForDay[0].id}}" class="selector btn btn-sm col-12 py-2 {{"calendar__" ~ eventsForDay[0].type}}">
						{% if eventsForDay[0].start_at|date('d/m/Y') == eventsForDay[0].end_at|date('d/m/Y') %}

							activité : <b>{{eventsForDay[0].type}}</b>   -  de <b>{{eventsForDay[0].start_at|date('h:i')}}</b>  à <b>{{eventsForDay[0].end_at|date('h:i')}}</b> 
						{% else %}
							
							activité : <b>{{eventsForDay[0].type}}</b>   -  débute à <b>{{eventsForDay[0].start_at|date('h:i')}}</b>  et termine le <b>{{eventsForDay[0].end_at|date('d M')}}</b>  à <b>{{eventsForDay[0].end_at|date('h:i')}}</b> 
						{% endif %}
					</a>
				{% else %}

					{% for event in eventsForDay %}
					
					<a href="/activity/register?id={{event.id}}" class="selector btn btn-sm col-6 py-2 {{"calendar__" ~ event.type}}">
						{% if event.start_at|date('d/m/Y') == event.end_at|date('d/m/Y') %}

							activité : <b>{{event.type}}</b>  -  de <b>{{event.start_at|date('h:i')}}</b>  à <b>{{event.end_at|date('h:i')}}</b> 
						{% else %}
							
							activité : <b>{{event.type}}</b>   -  débute à <b>{{event.start_at|date('h:i')}}</b>  et termine le <b>{{event.end_at|date('d M')}}</b>  à <b>{{event.end_at|date('h:i')}}</b> 
						{% endif %}
					</a>
					{% endfor %}
				{% endif %}
		</div>
		</div>
	</div>
</div>