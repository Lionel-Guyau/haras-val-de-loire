    <div class="swiper-wrapper">
        {% for formation in formations %}
            <div class="swiper-slide">{{formation}}</div>
        {% endfor %}
    </div>
    <!-- Add Pagination -->
    <div class="swiper-pagination"></div>  #}
  </div>

{% endblock %}

