{% extends 'layout.html.twig' %}

{% block title %}
    Page Activités
{% endblock %}


{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/style.css"> 
  <link rel="stylesheet" href="/assets/css/style-activity.css"> 
	<link rel="stylesheet" href="/assets/css/bootstrap.min.css"> 
	<link rel="stylesheet" href="/assets/css/bootstrap.min.css.map"> 
  <link rel="stylesheet" href="../package/swiper-bundle.min.css">
  <link rel="stylesheet" href="/assets/css/style-calendar.css">
{% endblock %}

{% block javascript %}
  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

  <script>
    var swiper = new Swiper('.swiper-container', {
      slidesPerView: 3,
      spaceBetween: 15,
      height: 250,
      centeredSlides: false,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
    });
  </script>
{% endblock %}

{% block content %}

    {% include 'Components/_calendar.html.twig' %}  

  <!-- Cards activity -->

  <div id="activity_body" class="d-flex  flex-wrap">
      <div class="mt-3 mb-5 col-12 d-flex flex-wrap justify-content-around">
        {% for activity in activities %}
          <div id="lessons_cards" class="card shadow col-8 col-md-4 col-lg-3 col-xl-2 m-2 p-2 bg-white rounded-2 w-5 text-primary d-flex text-center" style="align-items: center;">
            <img class="card-img-top"
            src="/recup_photos/Capture d’écran 2021-04-13 191525.png" 
            alt="Photo cours">
            <p id="lessons_cards_title"> {{activity.type}}<p>
            <p> {{activity.capacity}} places restante(s)</p>
            <p> Date du cours : {{activity.start_at|date("d/m/Y")}}</p>
            <p> à {{activity.start_at|date("H")}}h{{activity.start_at|date("i")}}.</p>
          </div>
        {% endfor %}
      </div>
  
